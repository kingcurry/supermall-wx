/* pages/detail/detailChil/paramInfo/paramInfo.wxss */
.param-info {
  padding: 40rpx 30rpx;
  border-collapse: collapse;
  border-bottom: 8rpx solid #f2f5f8;
}

.param-info-item {
  display: flex;
  flex-wrap: wrap;
  height: 84rpx;
  font-size: 24rpx;
  align-items: center;
  border-bottom: 1rpx solid hsla(0, 0%, 39.2%, .1);
}

.param-info-item:nth-child(1) {
  border-top: 1rpx solid hsla(0, 0%, 39.2%, .1)3;
}

.tr {
  flex: 1;
}

.td {
  flex: 3;
  color: #eb4868;
}