/* pages/detail/detailChil/commentInfo/commentInfo.wxss */
.comment-info {
  padding: 10rpx 24rpx;
}

.comment-info-header {
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  align-items: center;
  border-bottom: 1px solid rgba(0, 0, 0, .1);
}

.comment-info-header > text:nth-child(1) {
  font-size: 30rpx;
} 

.comment-info-header > text:nth-child(2) {
  font-size: 24rpx;
}

.info-user {
  display: flex;
  width: 100%;
  height: 84rpx;
  font-size: 28rpx;
  align-items: center;
  margin: 24rpx 0;
}

.info-user > image {
  display: inline-block;
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
}

.info-user > text {
  margin-left: 20rpx;
}

.other-info {
  color: #888;
  font-size: 24rpx;
  display: flex;
}

.other-info > text:nth-child(2) {
  margin-left: 10rpx;
}