/* pages/detail/detailChil/baseInfoShow/baseInfoShow.wxss */
.title {
  font-size: 32rpx;
  margin: 10rpx;
  display: block;
}

.n-price {
  display: inline-block;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  font-size: 48rpx;
  color: #ff5777;
}

.o-price {
  font-size: 26rpx;
  text-decoration-line: line-through;
  color: #999999;
}

.price {
  position: relative;
}

.discount {
  position: absolute;
  padding: 0 12rpx;
  background-color: #ff5777;
  border-radius: 20rpx;
  margin-left: 5rpx;
  font-size: 24rpx;
  color: #ffffff;
  top: 25rpx;
}

.info-other {
  margin: 0 auto;
  width: 94%;
  height: 60rpx;
  margin-top: 10rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 4rpx solid #f2f5f8;
  color: #999999;
}

.info-server {
  width: 100%;
  display: flex;
  color: #333333;
  justify-content: space-around;
  font-size: 26rpx;
  height: 140rpx;
  line-height: 140rpx;
  border-bottom: 8rpx solid #f2f5f8;
}

.info-server-image {
  display: inline-block;
  height: 26rpx;
  width: 26rpx;
}
.info {
  margin-top: 40rpx;

}

.info-desc {
  font-size: 28rpx;
  padding: 30rpx 30rpx;
}

.desc-start {
  width: 180rpx;
  height: 2rpx;
  background-color: #a3a3a5;
  position: relative;
  margin-left: 30rpx;
}

.desc-start::before {
  content: '';
  height: 15rpx;
  width: 15rpx;
  background-color: #333;
  position: absolute;
  top: 0rpx;
}

.desc-end {
  float: right;
  width: 180rpx;
  height: 2rpx;
  background-color: #a3a3a5;
  position: relative;
  margin-right: 30rpx;
}

.desc-end::before {
  content: '';
  height: 15rpx;
  width: 15rpx;
  background-color: #333;
  position: absolute;
  top: -14rpx;
  right: 0;
}

.info-key {
  margin: 20rpx 0 20rpx 30rpx;
}

.info-list-item > image {
  width: 100%;
}

.info-list {
  border-bottom: 8rpx solid #f2f5f8;
}

