<!--pages/home/homeChil/homeRecommend/recommend.wxml-->
<view class="recommend">
  <block wx:for="{{recommends}}" wx:key="index">
    <view class="recommend-item">
      <a href="{{item.link}}">
        <image src="{{item.image}}" alt="" mode="widthFix" bindload="finishLoad"></image>
         <text>{{item.title}}</text>
      </a>
    </view>
  </block>
</view>